---
import { Image } from 'astro:assets'

interface Props {
  class?: string;
  name?: string;
  role?: string;
  imageAlt?: string;
  imageSrc?: ImageMetadata;
  certifications?: string[];
}

const { class: additionalClasses, name, role, imageAlt, imageSrc, certifications } = Astro.props
---
<article 
  class={`
  ${additionalClasses}
  h-auto w-full md:w-4/5 lg:w-5/12 lg:min-h-[422px] xl:w-[30%] 2xl:size-full
  flex flex-col items-center
  rounded-lg
  bg-gradient-to-b from-violet-100 to-white
  border-violet-200 border 
	shadow-md shadow-black/20 
  `}
>
  <div class="my-2 h-[240px] w-[240px] rounded-full overflow-hidden border-4 border-white shadow-lg">
    <Image 
    src={imageSrc} 
    alt={imageAlt} 
    class="rounded-full object-cover size-full justify-self-center"
    height={320} 
    width={352} 
    quality={"max"} 
    />
  </div>

  <div class="w-full px-2 py-2 text-center text-gray-800 font-light text-sm flex flex-col gap-2">
    <h3 class="text-xl font-[600]">{name}</h3>
    <p class="text-base font-[400]">{role}</p>
  </div>

  <div class="w-full py-3 bg-violet-100 lg:min-h-[88px]">
    {certifications.map((desc: string) => (
      <p class="px-3 text-xs text-left w-full font-light text-gray-800">
        <i class="fa-solid fa-check"/> {desc}
      </p>
    ))}
  </div>
  
</article>